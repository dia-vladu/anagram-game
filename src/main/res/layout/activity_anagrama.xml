<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnagramaActivity"
    android:background="@color/pastel_pink">

    <TextView
        android:id="@+id/vladu_diana_ioana_resultTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lama_contour_brown"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"/>

    <Button
        android:id="@+id/vladu_diana_ioana_btnCreateAnagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/lama_pink"
        android:text="@string/btnCreateAnagram"
        android:textColor="@color/lama_contour_brown"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>